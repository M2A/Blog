                      @RenderBody()  
                      
                       
                     
                       
                    </div><!-- #entry-listing -->

                    <div class="nav">
                        <a id="nextpage" href="content1.html">Next Page</a>
                    </div>
                </div>
            </div><!-- .wrap < #main -->
        </section><!--  #main -->

        <footer id="footer">
            <div class="wrap group">
                <div class="footer-text">
                    <a href="#">Myblog</a> &mdash; this is a site.
                </div>
            </div>
        </footer>
    </div><!-- #page -->

